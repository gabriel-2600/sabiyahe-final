<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/student-style.css">

    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <title>Student Dashboard</title>
</head>
<body>
    <header>
        RENTIFY
    </header>

    <% if(status == 'loggedIn') { %>
        <nav>
            <a href="/student" style="color: antiquewhite;">Home</a>
            <a href="#stud-inventory" style="color: antiquewhite;">Inventory</a>
            <a href="#stud-rent-request" style="color: antiquewhite;">Requests</a>
            <a href="#stud-reservations" style="color: antiquewhite;">Reservations</a>
            <a href="#user-profile" style="color: antiquewhite;">Profile</a>
            <a href="/logout" style="color: antiquewhite;">Logout</a>
        </nav>
        <main>
            <!-- <h1>Welcome <%=user.full_name %>!</h1> -->
            <h1>Student Dashboard</h1>

            <!-- Section: Inventory -->
            <section id="stud-inventory">
                <div id="inventory-reservations-div">
                    <div class="search-table-div">
                        <h2>Available Room/Equipment For Rent</h2>
                        <div>
                            <input placeholder="Search by Name" id="stud-search-input">
                            <button id="stud-search-btn">Search</button>
                        </div>
        
                        <div class="scrollable-table">
                            <table id="stud-inventory-table">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Item Description</th>
                                        <th>Image</th>
                                        <th>Request For Reservation</th>
                                    </tr>
                                </thead>
                                <tbody id="stud-inventory-tbody"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
                
                
                
            </section>

            <!-- Section: Rent Requests -->
            <section id="stud-rent-request">
                <h2>Current Pending Requests</h2>
                <h4>Note: If your request is no longer visible, it likely means the custodian rejected it, the item is unavailable, or it was deleted from the inventory.</h4>
                <table id="stud-request-table">
                    <thead>
                        <tr>
                            <th>Request ID</th>
                            <th>Item/Room Name</th>
                            <th>Rent Date</th>
                            <th>Return Date</th>
                            <th>Status</th>
                            <th>Cancel</th>
                        </tr>
                    </thead>
                    <tbody id="stud-request-tbody"></tbody>
                </table>
            </section>

            <!-- Section: Reservations -->
            <section id="stud-reservations">
                <h2>Current Reservations</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Reservation ID</th>
                            <th>Item/Room Name</th>
                            <th>Date Approved</th>
                            <th>Renting Date</th>
                            <th>Return Date</th>
                        </tr>
                    </thead>
                    <tbody id="stud-reservations-tbody"></tbody>
                </table>
            </section>

            <!-- Section: User Profile -->
            <section id="user-profile" data-user-id="<%= user.user_id %>">
                <div class="profile">
                    <h2>User Profile</h2>
                    <!-- <h4>User ID: <%= user.user_id %></h4> -->
                    <h4>Full Name: <%= user.full_name %></h4>
                    <h4>Email: <%= user.email %></h4>
                    <h4>Username: <%= user.username %></h4>
                </div>
            </section>

        </main>

    <% } else if (status == 'no') { %>
        <h2>You need to <a href="/login">Login</a> first</h2>
    <% } %>

    <script src="/js/student/rentRequestFrontEnd.js"></script>
</body>
</html>
